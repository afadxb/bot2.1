# Runtime
RUN_MODE=daemon
TZ=America/Toronto
SIMULATION=true

# Watchlist ingestion
WATCHLIST_DB_PATH=/path/to/premarket.db
WATCHLIST_SYMBOL_KEY=symbol

# Storage
SQLITE_PATH=var/daytrading.db

# Broker (IBKR)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=42
IBKR_PAPER=true

# Strategy
EMA_FAST=9
EMA_SLOW=21
VOL_SPIKE_MULT=2.0
CONS_LOOKBACK_MIN=20
VWAP_ENFORCE=true
CATALYST_FRESH_HOURS=6
TOP_K_EXECUTE=20

# Risk & limits
RISK_PCT_PER_TRADE=1.0
STOP_MODE=ema21_or_swing
ATR_MULT=1.5
SCALE1_PCT=4.0
TARGET_PCT=8.0
MAX_TRADES_PER_DAY=8
DAILY_DRAWDOWN_HALT_PCT=4.0
FLATTEN_ET=15:55

# AI / Sentiment
AI_SENTIMENT_ENABLED=true
AI_MODEL=finbert
AI_SOFT_VETO=true

# Catalysts
FINNHUB_TOKEN=
YAHOO_RSS_ENABLED=true

# Notifications
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=

# Logging
LOG_CFG=config/logging.yaml
